{
  "include": [
    "global.d.ts",
    "ts/**/*"
  ],
  "exclude": [
    "ts/WoltLabSuite/WebComponent/**"
  ],
  "compilerOptions": {
    "allowJs": true,
    "target": "es2019",
    "module": "amd",
    "rootDir": "ts/",
    "outDir": "wcfsetup/install/files/js/",
    "lib": [
      "dom",
      "DOM.Iterable",
      "es2019"
    ],
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "importHelpers": true,
    "newLine": "lf"
  }
}
